<Window x:Class="ConverterFun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConverterFun"
        mc:Ignorable="d"
        Title="Lab 2.2" Height="100" Width="250">
    <Window.Resources>
        <local:YesNoToBooleanConverter x:Key="yesno" />
    </Window.Resources>
    <StackPanel>
        <TextBox Margin="5" x:Name="txt" />
        <CheckBox Margin="5" x:Name="chk"
                  IsChecked="{Binding ElementName=txt, Path=Text, Converter={StaticResource yesno}, ConverterCulture=da}" />
    </StackPanel>
</Window>
