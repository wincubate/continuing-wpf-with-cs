<Window x:Class="UpdatingCastMembers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ash vs. Evil Dead" Height="400" Width="640">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <TextBlock FontSize="26" HorizontalAlignment="Center" Text="{Binding Character,Mode=TwoWay}"></TextBlock>
            <TextBlock FontSize="18" HorizontalAlignment="Center" Text="{Binding ActorName, StringFormat='Played by {0}'}"></TextBlock>
            <Button FontSize="14" Click="Button_Click">Next</Button>
        </StackPanel>
        <Image Source="{Binding Image}" />
    </DockPanel>
</Window>
