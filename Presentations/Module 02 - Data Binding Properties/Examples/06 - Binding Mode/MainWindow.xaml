<Window x:Class="Wincubate.DataBindingPropertiesExamples.Slide06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Binding Mode" Height="237" Width="300">
    <StackPanel>
        <Slider Name="slider" Minimum="0" Maximum="100" Value="87" Margin="20"></Slider>
        <TextBox Name="textbox"
                 Text="{Binding ElementName=slider, Path=Value}"
                 Margin="20"/>
        <!--<Button Name="button" Click="button_Click" Margin="20">UpdateSource()</Button>-->
    </StackPanel>
</Window>
